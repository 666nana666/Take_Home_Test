<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:colorPrimary">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->

        <item name="tabIndicatorColor">@color/green</item>
        <item name="android:titleTextStyle">@color/black</item>
        <item name="android:background">@color/white</item>

        <item name="tabIndicatorHeight">2dp</item>

        <item name="tabTextAppearance">@color/green</item>
        <item name="tabSelectedTextColor">@color/green</item>
    </style>
</resources>